<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292a30"
    android:orientation="vertical" >
   
    <!-- 头像 -->
  <ImageView 
      android:id="@+id/iv_photo"
      android:layout_width="60dp"
      android:layout_height="60dp" 
      android:src="@drawable/user"
      android:layout_margin="20dp"
      />  
      
  <TextView 
      android:id="@+id/username"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="匿名用户"
      android:textSize="20sp"
      android:textColor="@color/white"
      android:layout_marginTop="20dp"
      android:layout_marginLeft="20dp"
      />
   <TextView 
       android:id="@+id/username_contect"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="尚未关联"
      android:textSize="15sp"
      android:textColor="#7a7c7f"
      android:layout_marginLeft="20dp"
      android:layout_marginBottom="20dp"
      />
    <TextView
        android:id="@+id/tv_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#525357"
        />
    <!--积分-->
   <RelativeLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/rl_jifen"
       
       >
       <TextView 
           android:id="@+id/tv_jifen"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="0积分"
           android:textSize="15sp"
           android:textColor="#7a7c7f"
           android:layout_marginLeft="20dp"
           android:layout_marginTop="20dp"
           
           />
        <TextView 
            android:id="@+id/tv_up_jifen"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="升级到下一级别仍需要积分:45"
           android:textSize="15sp"
           android:textColor="#7a7c7f"
           android:layout_marginLeft="20dp"
           android:layout_below="@id/tv_jifen"
           
           />

      <ImageView
          android:id="@+id/iv_icon"
          android:layout_width="40dp"
          android:layout_height="50dp"
          android:layout_alignParentRight="true"
          android:layout_alignTop="@+id/tv_jifen"
          android:src="@drawable/jifen_icon"
          android:layout_marginRight="10dp"
          android:layout_marginTop="5dp"
          
          
           />
      
       <TextView
        android:id="@+id/tv_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#525357"
        android:layout_below="@id/iv_icon"
        android:layout_marginTop="10dp"
        />
      
       
   </RelativeLayout>
   
   <!-- 公交变动提醒 -->  
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       >
       <ImageView 
           android:id="@+id/iv_buschange"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/bus_change"
           android:layout_margin="20dp"
           />
       <TextView 
           android:id="@+id/tv_buschange"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="公交变动提醒"
           android:textColor="@color/txt_left_selector"
           android:textSize="20sp"
           android:layout_marginTop="25dp"
           android:layout_marginLeft="10dp"
           />
       
       
   </LinearLayout>
    
  <!-- 离线地图 -->  
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:id="@+id/ll_offline_map"
       >

       <ImageView
           android:id="@+id/iv_offmap"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"
           android:src="@drawable/offmap" />

       <TextView 
           android:id="@+id/tv_offMap"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="离线地图"
          
           android:textSize="20sp"
           android:layout_marginLeft="10dp"
            android:textColor="@color/txt_left_selector"
           
           />
       
       
   </LinearLayout>
   
   <TextView
        android:id="@+id/tv_line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#525357"
        android:layout_marginTop="10dp"
        />
   
   <!-- 推荐给朋友 -->
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:id="@+id/ll_shared"
       >

       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
          android:layout_margin="20dp"
           android:src="@drawable/shared" />

       <TextView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="推荐给朋友"
            android:textColor="@color/txt_left_selector"
           android:textSize="20sp"
           android:layout_margin="20dp"
           />
       
       
   </LinearLayout>
   
     <!-- 设置 -->
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       >

       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"
           android:src="@drawable/setting" />

       <TextView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="设置"
            android:textColor="@color/txt_left_selector"
           android:textSize="20sp"
           android:layout_marginLeft="10dp"
           />
       
       
   </LinearLayout>
   
        <!-- 检查更新 -->
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
      
       >

       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" 
           android:src="@drawable/update" 
           android:layout_marginLeft="15dp"
           android:layout_marginTop="20dp"
           />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="检查更新"
           android:textColor="@color/txt_left_selector"
           android:textSize="20sp"
           android:layout_margin="25dp"
            />
       
   </LinearLayout>
   <TextView
        android:id="@+id/tv_line4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#525357"
        />
   
   <TextView 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="帮助中心"
       android:textSize="15sp"
       android:textColor="#7a7c7f"
       android:layout_marginLeft="20dp"
       android:layout_marginTop="10dp"
       />
   <TextView 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="关于"
       android:textSize="15sp"
       android:textColor="#7a7c7f"
       android:layout_marginLeft="20dp"
       android:layout_marginTop="10dp"
       />
   <TextView 
       android:id="@+id/tv_fankui"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="反馈"
       android:textSize="15sp"
       android:textColor="#7a7c7f"
       android:layout_marginLeft="20dp"
       android:layout_marginTop="10dp"
      
       />

</LinearLayout>